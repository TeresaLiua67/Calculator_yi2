<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.example.admin.calculator.ProgrammerActivity"
    tools:showIn="@layout/activity_programmer">

    <LinearLayout
        android:layout_width="395dp"
        android:layout_height="587dp"
        android:orientation="vertical"
        tools:layout_editor_absoluteX="8dp"
        tools:layout_editor_absoluteY="8dp">

        <GridLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:columnCount="5"
            android:rowCount="8"
            android:visibility="visible"
            tools:layout_editor_absoluteX="6dp"
            tools:layout_editor_absoluteY="8dp">

            <TextView
                android:id="@+id/show"
                android:layout_width="match_parent"
                android:layout_height="146.75dp"
                android:layout_columnSpan="5"
                android:layout_rowSpan="2"
                android:gravity="right|bottom"
                android:text=""
                android:textAppearance="@style/TextAppearance.AppCompat.Display3"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toTopOf="parent" />


            <RadioGroup
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_column="0"
                android:layout_row="3"
                android:layout_rowSpan="4">

                <RadioButton
                    android:id="@+id/sixteenj"
                    android:layout_width="100dp"
                    android:layout_height="73.375dp"
                    android:layout_column="0"
                    android:layout_row="3"
                    android:layout_weight="1"
                    android:text="十六进制"
                    android:textAppearance="@style/TextAppearance.AppCompat.Light.Widget.PopupMenu.Large" />

                <RadioButton
                    android:id="@+id/tenj"
                    android:layout_width="100dp"
                    android:layout_height="73.375dp"
                    android:layout_column="0"
                    android:layout_row="4"
                    android:layout_weight="1"
                    android:checked="true"
                    android:text="十进制"
                    android:textAppearance="@style/TextAppearance.AppCompat.Light.Widget.PopupMenu.Large" />

                <RadioButton
                    android:id="@+id/eightj"
                    android:layout_width="100dp"
                    android:layout_height="73.375dp"
                    android:layout_column="0"
                    android:layout_row="5"
                    android:layout_weight="1"
                    android:text="八进制"
                    android:textAppearance="@style/TextAppearance.AppCompat.Light.Widget.PopupMenu.Large" />

                <RadioButton
                    android:id="@+id/twoj"
                    android:layout_width="100dp"
                    android:layout_height="73.375dp"
                    android:layout_column="0"
                    android:layout_row="6"
                    android:layout_weight="1"
                    android:text="二进制"
                    android:textAppearance="@style/TextAppearance.AppCompat.Light.Widget.PopupMenu.Large" />
            </RadioGroup>

            <Button
                android:id="@+id/cancel"
                android:layout_width="75dp"
                android:layout_height="73.375dp"
                android:layout_column="4"
                android:layout_row="2"
                android:background="@android:color/background_light"
                android:text="X"
                android:textAppearance="@style/TextAppearance.AppCompat.Light.Widget.PopupMenu.Large" />


            <Button
                android:id="@+id/one"
                android:layout_width="75dp"
                android:layout_height="73.375dp"
                android:layout_column="1"
                android:layout_row="3"
                android:background="@android:color/background_light"
                android:text="1"
                android:textAppearance="@style/TextAppearance.AppCompat.Light.Widget.PopupMenu.Large" />

            <Button
                android:id="@+id/two"
                android:layout_width="75dp"
                android:layout_height="73.375dp"
                android:background="@android:color/background_light"
                android:text="2"
                android:textAppearance="@style/TextAppearance.AppCompat.Light.Widget.PopupMenu.Large" />

            <Button
                android:id="@+id/three"
                android:layout_width="75dp"
                android:layout_height="73.375dp"
                android:background="@android:color/background_light"
                android:text="3"
                android:textAppearance="@style/TextAppearance.AppCompat.Light.Widget.PopupMenu.Large" />

            <Button
                android:id="@+id/divide"
                android:layout_width="75dp"
                android:layout_height="73.375dp"
                android:background="@color/blue1"
                android:text="/"
                android:textAppearance="@style/TextAppearance.AppCompat.Light.Widget.PopupMenu.Large" />

            <Button
                android:id="@+id/clear"
                android:layout_width="100dp"
                android:layout_height="73.375dp"
                android:layout_column="0"
                android:layout_columnSpan="2"
                android:layout_row="2"
                android:background="@android:color/background_light"
                android:text="L"
                android:textAppearance="@style/TextAppearance.AppCompat.Light.Widget.PopupMenu.Large" />


            <Button
                android:id="@+id/four"
                android:layout_width="75dp"
                android:layout_height="73.375dp"
                android:layout_column="1"
                android:layout_row="4"
                android:background="@android:color/background_light"
                android:text="4"
                android:textAppearance="@style/TextAppearance.AppCompat.Light.Widget.PopupMenu.Large" />

            <Button
                android:id="@+id/five"
                android:layout_width="75dp"
                android:layout_height="73.375dp"
                android:background="@android:color/background_light"
                android:text="5"
                android:textAppearance="@style/TextAppearance.AppCompat.Light.Widget.PopupMenu.Large" />

            <Button
                android:id="@+id/six"
                android:layout_width="75dp"
                android:layout_height="73.375dp"
                android:background="@android:color/background_light"
                android:text="6"
                android:textAppearance="@style/TextAppearance.AppCompat.Light.Widget.PopupMenu.Large" />

            <Button
                android:id="@+id/multiply"
                android:layout_width="75dp"
                android:layout_height="73.375dp"
                android:background="@color/blue1"
                android:elevation="0dp"
                android:text="*"
                android:textAppearance="@style/TextAppearance.AppCompat.Light.Widget.PopupMenu.Large" />


            <Button
                android:id="@+id/seven"
                android:layout_width="75dp"
                android:layout_height="73.375dp"
                android:layout_column="1"
                android:layout_row="5"
                android:background="@android:color/background_light"
                android:text="7"
                android:textAppearance="@style/TextAppearance.AppCompat.Light.Widget.PopupMenu.Large" />

            <Button
                android:id="@+id/eight"
                android:layout_width="75dp"
                android:layout_height="73.375dp"
                android:background="@android:color/background_light"
                android:text="8"
                android:textAppearance="@style/TextAppearance.AppCompat.Light.Widget.PopupMenu.Large" />

            <Button
                android:id="@+id/nine"
                android:layout_width="75dp"
                android:layout_height="73.375dp"
                android:background="@android:color/background_light"
                android:text="9"
                android:textAppearance="@style/TextAppearance.AppCompat.Light.Widget.PopupMenu.Large" />

            <Button
                android:id="@+id/subtract"
                android:layout_width="75dp"
                android:layout_height="73.375dp"
                android:background="@color/blue1"
                android:text="-"
                android:textAppearance="@style/TextAppearance.AppCompat.Light.Widget.PopupMenu.Large" />


            <Button
                android:id="@+id/equal"
                android:layout_width="75dp"
                android:layout_height="73.375dp"
                android:layout_column="3"
                android:layout_row="6"
                android:background="@android:color/background_light"
                android:text="="
                android:textAppearance="@style/TextAppearance.AppCompat.Light.Widget.PopupMenu.Large" />

            <Button
                android:id="@+id/add"
                android:layout_width="75dp"
                android:layout_height="73.375dp"
                android:background="@color/blue1"
                android:text="+"
                android:textAppearance="@style/TextAppearance.AppCompat.Light.Widget.PopupMenu.Large" />

            <Button
                android:id="@+id/zero"
                android:layout_width="150dp"
                android:layout_height="73.375dp"
                android:layout_column="1"
                android:layout_columnSpan="2"
                android:layout_row="6"
                android:background="@android:color/background_light"
                android:text="0"
                android:textAppearance="@style/TextAppearance.AppCompat.Light.Widget.PopupMenu.Large" />


        </GridLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            tools:layout_editor_absoluteX="5dp"
            tools:layout_editor_absoluteY="522dp">

            <Button
                android:id="@+id/a"
                android:layout_width="66.67dp"
                android:layout_height="73.375dp"
                android:layout_column="0"
                android:layout_row="7"
                android:layout_weight="1"
                android:background="@android:color/background_light"
                android:text="A"
                android:textAppearance="@style/TextAppearance.AppCompat.Light.Widget.PopupMenu.Large" />

            <Button
                android:id="@+id/b"
                android:layout_width="66.67dp"
                android:layout_height="73.375dp"
                android:layout_weight="1"
                android:background="@android:color/background_light"
                android:text="B"
                android:textAppearance="@style/TextAppearance.AppCompat.Light.Widget.PopupMenu.Large" />

            <Button
                android:id="@+id/c"
                android:layout_width="66.67dp"
                android:layout_height="73.375dp"
                android:layout_weight="1"
                android:background="@android:color/background_light"
                android:text="C"
                android:textAppearance="@style/TextAppearance.AppCompat.Light.Widget.PopupMenu.Large" />

            <Button
                android:id="@+id/d"
                android:layout_width="66.67dp"
                android:layout_height="73.375dp"
                android:layout_weight="1"
                android:background="@android:color/background_light"
                android:text="D"
                android:textAppearance="@style/TextAppearance.AppCompat.Light.Widget.PopupMenu.Large" />

            <Button
                android:id="@+id/E"
                android:layout_width="66.67dp"
                android:layout_height="73.375dp"
                android:layout_column="4"
                android:layout_row="7"
                android:layout_weight="1"
                android:background="@android:color/background_light"
                android:text="E"
                android:textAppearance="@style/TextAppearance.AppCompat.Light.Widget.PopupMenu.Large" />

            <Button
                android:id="@+id/F"
                android:layout_width="66.67dp"
                android:layout_height="73.375dp"
                android:layout_column="5"
                android:layout_row="7"
                android:layout_weight="1"
                android:background="@android:color/background_light"
                android:text="F"
                android:textAppearance="@style/TextAppearance.AppCompat.Light.Widget.PopupMenu.Large" />
        </LinearLayout>

    </LinearLayout>

</android.support.constraint.ConstraintLayout>
